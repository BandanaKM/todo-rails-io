<%= render '/shared/topnavb' %> 

 <!-- About Section -->
    <section class="success" id="about">
        <div class="container">
            <div class="row">
                <hr class="star-light">
                <div class="col-lg-12 text-left">
                <h2>Todo</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-lg-offset-2">
                    <p>
                    <% @todos.each do |todo| %>
                        <p>        
                        <%= todo.name %>
                        <% if can? :update, todo %>
                        <%= link_to "Done", complete_todo_path(todo), method: :put, :class => "btn btn-default" %> 
                        <% end %>
                        <% if can? :edit, todo %>
                        <%= link_to "Edit", edit_todo_path(todo), :class => "btn btn-default"%> 
                        <% end %>
                        <% if can? :destroy, todo %>
                        <%= link_to "Delete", todo, method: :delete, :class => "btn btn-default" %>
                        <% end %>
                        </p> 
                        <% end %> 
                </div>
                <section class="success" id="about">
                <div class="row">
                <hr class="star-light">
                <div class="col-lg-12 text-left">
                <h2>Done</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-lg-offset-2">
                <p class="task-edits">
                <% @completes.each do |todo| %>
                <p>
                <%= todo.name %>
                <%= link_to "Delete", todo, method: :delete, :class => "btn btn-default" %>
                </p>
                <% end %>
                </div>

                <div class="col-lg-8 col-lg-offset-2 text-center">
                <%= link_to 'New Todo', new_todo_path, :class => "btn btn-lg btn-outline" %>
                </div>

                </div>
            </div>
        </div>
    </section>

<%= render '/shared/footer' %> 